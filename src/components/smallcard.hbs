<div class="flex flex-col justify-between items-start w-1/3 h-80 border rounded-lg p-10 {{ color }}"
    style="background-color:{{ hex }};">
<div class="self-start">
            <h3 class="font-bold text-white uppercase text-4xl font-heading">{{ text }}</h3>
        </div>
    <div class="flex flex-row justify-between items-end">       
        <div class="self-end absolute">
            <svg class="ml-64" xmlns="http://www.w3.org/2000/svg" width="75" height="200" viewBox="0 0 75 150">
                <rect x="0" y="5" width="20" height="150" fill="#FFFF" />
                <rect x="28" y="5" width="20" height="150" fill="#FFFF" />
                <rect x="55" y="5" width="30" height="150" fill="#FFFF" />
            </svg>
        </div>
    </div>
    <div class="self-end">
        {{> button text="Find out more" }}
    </div>
</div>